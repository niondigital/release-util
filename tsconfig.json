{
  "compilerOptions": {
    "target": "ESNext",
	"module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
	"sourceMap": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "types": [
			"node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@libraries/*": [
        "libraries/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
			"scripthost",
			"es2020.string"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
